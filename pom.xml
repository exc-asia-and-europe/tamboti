<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>tamboti</groupId>
	<artifactId>tamboti</artifactId>
	<version>1.1.6</version>
	<packaging>pom</packaging>

	<url>http://exist-db.org</url>

	<prerequisites>
		<maven>${mavenVersion}</maven>
	</prerequisites>

	<properties>
		<mavenVersion>3.1.1</mavenVersion>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<package-name>http://exist-db.org/apps/tamboti</package-name>
		<package-title>Tamboti Metadata Framework</package-title>
		<package-type>application</package-type>
	</properties>

	<issueManagement>
		<system>changes.xml</system>
		<url />
	</issueManagement>

	<developers>
		<developer>
			<name>claudius</name>
			<email>claudius.teodorescu@asia-europe.uni-heidelberg.de</email>
		</developer>
	</developers>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.google.code.maven-replacer-plugin</groupId>
					<artifactId>replacer</artifactId>
					<version>1.5.3</version>
				</plugin>
				<plugin>
					<groupId>ro.kuberam.maven.plugins</groupId>
					<artifactId>kuberam-expath-plugin</artifactId>
					<version>0.4.2</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<profile>
			<id>general-production-build</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>replacer</artifactId>
						<executions>
							<execution>
								<id>filter-config.default.xqm</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/config.default.xqm</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/config.xqm</outputFile>
									<replacements>
										<replacement>
											<token>config:app-version := ""</token>
											<value>config:app-version := "${project.version}"</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
							<execution>
								<id>filter-services.default.xml</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/configuration/services.default.xml</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/services.xml</outputFile>
									<replacements>
										<replacement>
											<token>&lt;/service&gt;</token>
											<value>${image-services}&lt;/service&gt;</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>ro.kuberam.maven.plugins</groupId>
						<artifactId>kuberam-expath-plugin</artifactId>
						<executions>
							<execution>
								<id>create-general-test-build</id>
								<phase>package</phase>
								<goals>
									<goal>make-xar</goal>
								</goals>
								<configuration>
									<descriptor>build/general-production-assembly.xml</descriptor>
									<finalName>${project.build.finalName}</finalName>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>general-test-build</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>replacer</artifactId>
						<executions>
							<execution>
								<id>filter-index.html</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/themes/tamboti/pages/index.html</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/index.html</outputFile>
									<replacements>
										<replacement>
											<token>theme/images/tamboti.png</token>
											<value>theme/images/tamboti-test.png</value>
										</replacement>
										<replacement>
											<token>&lt;div id="page-head-right"&gt;</token>
											<value>&lt;div&gt;Version ${project.version}, build ${maven.build.timestamp} by
												${user.name}&lt;/div&gt;&lt;div
												id="page-head-right"&gt;</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
							<execution>
								<id>filter-config.default.xqm</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/config.default.xqm</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/config.xqm</outputFile>
									<replacements>
										<replacement>
											<token>config:actual-app-id := "tamboti"</token>
											<value>config:actual-app-id := "${project.artifactId}-${user.name}"</value>
										</replacement>
										<replacement>
											<token>config:app-version := ""</token>
											<value>config:app-version := "${project.version}"</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
							<execution>
								<id>filter-services.default.xml</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/configuration/services.default.xml</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/services.xml</outputFile>
									<replacements>
										<replacement>
											<token>&lt;/service&gt;</token>
											<value>${image-services}&lt;/service&gt;</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>ro.kuberam.maven.plugins</groupId>
						<artifactId>kuberam-expath-plugin</artifactId>
						<executions>
							<execution>
								<id>create-general-test-build</id>
								<phase>package</phase>
								<goals>
									<goal>make-xar</goal>
								</goals>
								<configuration>
									<descriptor>build/general-test-assembly.xml</descriptor>
									<finalName>${project.build.finalName}-test-${user.name}</finalName>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>trunk-cluster-production-build</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>replacer</artifactId>
						<executions>
							<execution>
								<id>filter-config.default.xqm</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/config.default.xqm</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/config.xqm</outputFile>
									<replacements>
										<replacement>
											<token>config:enforced-realm-id := "ldap-server.yourdomain.com"</token>
											<value>config:enforced-realm-id := "${enforced-realm-id}"</value>
										</replacement>
										<replacement>
											<token>config:dba-credentials := \("admin",""\)</token>
											<value>config:dba-credentials := \("admin","${admin-password}"\)</value>
										</replacement>
										<replacement>
											<token>config:app-version := ""</token>
											<value>config:app-version := "${project.version}"</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
							<execution>
								<id>filter-services.default.xml</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/configuration/services.default.xml</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/services.xml</outputFile>
									<replacements>
										<replacement>
											<token>&lt;/service&gt;</token>
											<value>${image-services}&lt;/service&gt;</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>ro.kuberam.maven.plugins</groupId>
						<artifactId>kuberam-expath-plugin</artifactId>
						<executions>
							<execution>
								<id>create-general-production-build</id>
								<phase>package</phase>
								<goals>
									<goal>make-xar</goal>
								</goals>
								<configuration>
									<descriptor>build/cluster-production-assembly.xml</descriptor>
									<finalName>${project.build.finalName}</finalName>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>trunk-cluster-test-build</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.google.code.maven-replacer-plugin</groupId>
						<artifactId>replacer</artifactId>
						<executions>
							<execution>
								<id>filter-index.html</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/themes/tamboti/pages/index.html</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/index.html</outputFile>
									<replacements>
										<replacement>
											<token>theme/images/tamboti.png</token>
											<value>theme/images/tamboti-test.png</value>
										</replacement>
										<replacement>
											<token>&lt;div id="page-head-right"&gt;</token>
											<value>&lt;div&gt;Version ${project.version}, build ${maven.build.timestamp} by
												${user.name}&lt;/div&gt;&lt;div
												id="page-head-right"&gt;</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
							<execution>
								<id>filter-config.default.xqm</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/config.default.xqm</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/config.xqm</outputFile>
									<replacements>
										<replacement>
											<token>config:enforced-realm-id := "ldap-server.yourdomain.com"</token>
											<value>config:enforced-realm-id := "${enforced-realm-id}"</value>
										</replacement>
										<replacement>
											<token>config:dba-credentials := \("admin",""\)</token>
											<value>config:dba-credentials := \("admin","${admin-password}"\)</value>
										</replacement>
										<replacement>
											<token>config:app-version := ""</token>
											<value>config:app-version := "${project.version}"</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
							<execution>
								<id>filter-services.default.xml</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>replace</goal>
								</goals>
								<configuration>
									<file>${basedir}/modules/configuration/services.default.xml</file>
									<outputFile>${project.build.directory}/maven-replacer-plugin/services.xml</outputFile>
									<replacements>
										<replacement>
											<token>&lt;/service&gt;</token>
											<value>${image-services}&lt;/service&gt;</value>
										</replacement>
									</replacements>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>ro.kuberam.maven.plugins</groupId>
						<artifactId>kuberam-expath-plugin</artifactId>
						<executions>
							<execution>
								<id>create-general-production-build</id>
								<phase>package</phase>
								<goals>
									<goal>make-xar</goal>
								</goals>
								<configuration>
									<descriptor>build/cluster-test-assembly.xml</descriptor>
									<finalName>${project.build.finalName}-test-${user.name}</finalName>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>test-mail</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-changes-plugin</artifactId>
						<version>2.9</version>
						<executions>
							<execution>
								<id>generate-announcement-mail</id>
								<phase>package</phase>
								<goals>
									<goal>announcement-generate</goal>
								</goals>
							</execution>
							<execution>
								<id>send-announcement-mail</id>
								<phase>package</phase>
								<goals>
									<goal>announcement-mail</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<!-- <smtpHost>extmail.urz.uni-heidelberg.de</smtpHost> -->
							<!-- <smtpPort implementation="java.lang.Integer">25</smtpPort> -->
							<!-- <username>claudius.teodorescu@asia-europe.uni-heidelberg.de</username> -->
							<!-- <password></password> -->

							<smtpHost>smtp.gmail.com</smtpHost>
							<smtpPort implementation="java.lang.Integer">587</smtpPort>
							<username>claudius.teodorescu@gmail.com</username>
							<password></password>


							<!-- <sslMode>true</sslMode> -->
							<toAddresses>
								<toAddress implementation="java.lang.String">guth@asia-europe.uni-heidelberg.de</toAddress>
							</toAddresses>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
