<?xml version="1.0" encoding="UTF-8"?>
<div xmlns:ext="http://exist-db.org/mods/extension" xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xlink="http://www.w3.org/1999/xlink" class="note block-form" tab-id="note">
    <fieldset class="level-1">
        <xf:group appearance="minimal" class="label-box">
            <xf:output value="'Notes'" class="xforms-hint-icon">
                <xf:hint ref="id('hint-code_note',instance('code-tables'))/help"/>
            </xf:output>
            <xf:trigger ref=".[mods:note]">
                <xf:label>+</xf:label>
                <xf:action ev:event="DOMActivate">
                    <xf:insert nodeset="mods:note" at="index('note-repeat')" position="before"/>
                </xf:action>
            </xf:trigger>
            <xf:trigger ref=".[mods:note]">
                <xf:label>â€“</xf:label>
                <xf:action ev:event="DOMActivate">
                    <xf:delete ev:event="DOMActivate" nodeset="instance('save-data')/mods:note" at="index('note-repeat')"/>
                </xf:action>
            </xf:trigger>
        </xf:group><!--Attributes: altRepGroup, displayLabel, ID, lang, script, transliteration, type, xlink:href, xml:lang--><!--Subelements: none-->
        <xf:repeat nodeset="instance('save-data')/mods:note" id="note-repeat">
            <xf:group appearance="full">
                <xf:group class="show-hide" ref=".[count(@*) &lt; 9]">
                    <xf:switch>
                        <xf:case id="note-add-node-hide">
                            <div class="open-close-button">
                                <xf:trigger class="add-button">
                                    <xf:label class="xforms-group-label-centered">&gt;</xf:label>
                                    <xf:toggle case="note-add-node-unhide" ev:event="DOMActivate"/>
                                </xf:trigger>
                            </div>
                        </xf:case>
                        <xf:case id="note-add-node-unhide">
                            <div class="open-close-button">
                                <xf:trigger>
                                    <xf:label class="xforms-group-label-centered">&lt;</xf:label>
                                    <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                </xf:trigger>
                            </div>
                            <div class="node-adds">
                                <xf:trigger ref=".[not(@altRepGroup)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add Alternate Representation Group</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@altRepGroup"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@displayLabel)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add Display Label</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@displayLabel"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@ID)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add ID</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@ID"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@lang)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add Language</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@lang"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@script)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add Script</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@script"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@transliteration)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add Transliteration</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@transliteration"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@type)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add Type</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@type"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@xlink:href)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add XLink</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@xlink:href"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(@xml:lang)]" class="add-button">
                                    <xf:label class="xforms-group-label-centered">Add xml:lang</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:toggle case="note-add-node-hide" ev:event="DOMActivate"/>
                                        <xf:insert context="." origin="instance('insert-templates')/mods:note/@xml:lang"/>
                                    </xf:action>
                                </xf:trigger>
                            </div>
                        </xf:case>
                    </xf:switch>
                </xf:group>
                <xf:group ref=".[@altRepGroup]">
                    <xf:select1 ref="./@altRepGroup">
                        <xf:label>
                            <xf:output value="'Alt. Representation Group'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_altRepGroup',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='altRepGroup-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group ref=".[@displayLabel]">
                    <xf:input ref="./@displayLabel" class="text_50">
                        <xf:label>
                            <xf:output value="'Display Label'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_displayLabel',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group ref=".[@ID]">
                    <xf:input ref="./@ID" selection="open" class="text_50">
                        <xf:label>
                            <xf:output value="'ID'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_ID',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group ref=".[@type]">
                    <xf:select1 ref="./@type" selection="open">
                        <xf:label>
                            <xf:output value="'Type (input by selection)'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_note-type',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='note-type-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                    <xf:input ref="./@type">
                        <xf:label>
                            <xf:output value="'Type (free-text input)'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_note-type',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group ref=".[@xlink:href]">
                    <xf:input ref="./@xlink:href" selection="open" class="text_50">
                        <xf:label>
                            <xf:output value="'XLink'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_xlink_href',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group ref=".[@lang]">
                    <xf:select1 ref="./@lang">
                        <xf:label>
                            <xf:output value="'Language'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_lang',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-sorted-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group ref=".[@script]">
                    <xf:select1 ref="./@script">
                        <xf:label>
                            <xf:output value="'Script'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_script',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='script-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group ref=".[@transliteration]">
                    <xf:select1 ref="./@transliteration">
                        <xf:label>
                            <xf:output value="'Transliteration'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_transliteration',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group ref=".[@xml:lang]">
                    <xf:select1 ref="./@xml:lang">
                        <xf:label>
                            <xf:output value="'xml:lang'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_xml_lang',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-2-type-short-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <br/>
                <xf:textarea ref=".">
                    <xf:label>
                        <xf:output value="'Note'" class="xforms-hint-icon">
                            <xf:hint ref="id('hint-code_note',instance('code-tables'))/help"/>
                        </xf:output>
                    </xf:label>
                </xf:textarea>
            </xf:group>
        </xf:repeat>
        <xf:group ref=".[not(mods:note)]" appearance="full">
            <xf:trigger class="add-button">
                <xf:label class="xforms-group-label-centered">Add Missing Note</xf:label>
                <xf:action ev:event="DOMActivate">
                    <xf:insert nodeset="instance('save-data')/mods:note" origin="instance('new-instance')/mods:note"/>
                </xf:action>
            </xf:trigger>
        </xf:group>
    </fieldset>
</div>