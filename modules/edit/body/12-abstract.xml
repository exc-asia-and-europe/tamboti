<div xmlns="http://www.w3.org/1999/xhtml" xmlns:ext="http://exist-db.org/mods/extension" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xlink="http://www.w3.org/1999/xlink" class="abstract block-form" tab-id="abstract">
    <xf:group>
        <fieldset class="level-1">
            <xf:group appearance="minimal" class="label-box">
                <xf:output value="'Abstracts'" class="xforms-hint-icon">
                    <xf:hint ref="id('hint-code_abstract',instance('code-tables'))/help"/>
                </xf:output>
                <xf:trigger ref=".[mods:abstract]">
                    <xf:label>+</xf:label>
                    <xf:action ev:event="DOMActivate">
                        <xf:insert nodeset="mods:abstract" at="index('abstract-repeat')" position="before"/>
                    </xf:action>
                </xf:trigger>
                <xf:trigger ref=".[mods:abstract]">
                    <xf:label>â€“</xf:label>
                    <xf:action ev:event="DOMActivate">
                        <xf:delete ev:event="DOMActivate" nodeset="instance('save-data')/mods:abstract" at="index('abstract-repeat')"/>
                    </xf:action>
                </xf:trigger>
            </xf:group><!--Attributes: altRepGroup, displayLabel, lang, script, shareable, transliteration, type, xlink, xml:lang--><!--Subelements: none-->
            <xf:repeat nodeset="instance('save-data')/mods:abstract" id="abstract-repeat">
                <xf:group class="show-hide" ref=".[count(@*) &lt; 9]">
                    <xf:switch>
                        <xf:case id="abstract-add-node-hide">
                            <div class="open-close-button">
                                <xf:trigger class="add-button">
                                    <xf:label class="xforms-group-label-centered">&gt;</xf:label>
                                    <xf:toggle case="abstract-add-node-unhide" ev:event="DOMActivate"/>
                                </xf:trigger>
                            </div>
                        </xf:case>
                        <xf:case id="abstract-add-node-unhide">
                            <div class="open-close-button">
                                <xf:trigger>
                                    <xf:label class="xforms-group-label-centered">&lt;</xf:label>
                                    <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                </xf:trigger>
                            </div>
                            <div class="node-adds">
                                <xf:group appearance="full">
                                    <xf:trigger ref=".[not(@altRepGroup)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Alternate
                                            Representation Group</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@altRepGroup"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@displayLabel)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Display
                                            Label</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@displayLabel"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@lang)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add
                                            Language</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@lang"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@script)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add
                                            Script</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@script"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@shareable)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Shareable </xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@shareable"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@transliteration)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add
                                            Transliteration</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@transliteration"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@type)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Type</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@type"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@xlink:href)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add XLink
                                            </xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@xlink:href"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@xml:lang)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add
                                            xml:lang</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="abstract-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:abstract/@xml:lang"/>
                                        </xf:action>
                                    </xf:trigger>
                                </xf:group>
                            </div>
                        </xf:case>
                    </xf:switch>
                </xf:group>
                <xf:group appearance="full" ref=".[@altRepGroup]">
                    <xf:select1 ref="./@altRepGroup">
                        <xf:label>
                            <xf:output value="'Alt. Representation Group'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_altRepGroup',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='altRepGroup-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group appearance="full" ref=".[@displayLabel]">
                    <xf:input ref="./@displayLabel" class="text_100">
                        <xf:label>
                            <xf:output value="'Display Label'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_displayLabel',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group appearance="full" ref=".[@shareable]">
                    <xf:select1 ref="./@shareable">
                        <xf:label>
                            <xf:output value="'Shareable'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_shareable',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='no-empty-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group appearance="full" ref=".[@type]">
                    <xf:input ref="./@type" class="text_50">
                        <xf:label>
                            <xf:output value="'Type'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_abstract-type',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group appearance="full" ref=".[@xlink:href]">
                    <xf:input ref="./@xlink:href" class="text_50">
                        <xf:label>
                            <xf:output value="'XLink'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_xlink_href',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:input>
                </xf:group>
                <xf:group appearance="full" ref=".[@lang]">
                    <xf:select1 ref="./@lang">
                        <xf:label>
                            <xf:output value="'Language'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_language',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-sorted-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group appearance="full" ref=".[@script]">
                    <xf:select1 ref="./@script">
                        <xf:label>
                            <xf:output value="'Script'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_script',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='script-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group appearance="full" ref=".[@transliteration]">
                    <xf:select1 ref="./@transliteration" selection="open">
                        <xf:label>
                            <xf:output value="'Transliteration'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_transliteration',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group appearance="full" ref=".[@xml:lang]">
                    <xf:select1 ref="./@xml:lang">
                        <xf:label>
                            <xf:output value="'xml:lang'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_xml_lang',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-2-type-short-code']/items/item">
                            <xf:label ref="label"/>
                            <xf:value ref="value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <br/>
                <xf:group appearance="full" ref=".">
                    <xf:textarea ref="." class="textarea">
                        <xf:label>
                            <xf:output value="'Abstract'" class="xforms-hint-icon">
                                <xf:hint ref="id('hint-code_abstract',instance('code-tables'))/help"/>
                            </xf:output>
                        </xf:label>
                    </xf:textarea>
                </xf:group>
            </xf:repeat>
            <xf:group appearance="full" ref=".[not(mods:abstract)]">
                <xf:trigger class="add-button">
                    <xf:label class="xforms-group-label-centered">Add Missing
                                        Abstract</xf:label>
                    <xf:action ev:event="DOMActivate">
                        <xf:insert nodeset="instance('save-data')/mods:abstract" origin="instance('new-instance')/mods:abstract"/>
                    </xf:action>
                </xf:trigger>
            </xf:group>
        </fieldset>
    </xf:group>
</div>