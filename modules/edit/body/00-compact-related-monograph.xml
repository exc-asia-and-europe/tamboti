<div xmlns="http://www.w3.org/1999/xhtml" xmlns:ext="http://exist-db.org/mods/extension" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xlink="http://www.w3.org/1999/xlink" class="compact block-form" tab-id="compact-b-monograph">
    <fieldset class="level-1">
        <xf:group appearance="minimal" class="label-box">
            <xf:output value="'Monograph Series'" class="hint-icon">
                <xf:hint ref="id('hint-code_series-compact', instance('code-tables'))/help"/>
            </xf:output>
        </xf:group>
        <xf:repeat nodeset="instance('save-data')/mods:relatedItem" id="relatedItem-series-repeat">
            <fieldset class="level-2">
                <xf:group appearance="minimal" class="label-box">
                    <xf:output value="'XLink of Book Series'" class="hint-icon">
                        <xf:hint ref="id('XLink of Book Series', instance('code-tables'))/help"/>
                        <xf:hint ref="id('hint-code_xlink_href-series', instance('code-tables'))/help"/>
                    </xf:output>
                </xf:group>
                <xf:group class="margin-plus" appearance="full">
                    <xf:input ref="./@xlink:href" class="text_50">
                        <xf:label>XLink</xf:label>
                    </xf:input>
                </xf:group>
            </fieldset>
            <fieldset class="level-2">
                <xf:group appearance="minimal" class="label-box">
                    <xf:output value="'Series Title'" class="hint-icon">
                        <xf:hint ref="id('hint-code_series-titleInfo-compact',instance('code-tables'))/help"/>
                    </xf:output>
                </xf:group>
                <xf:repeat nodeset="./mods:titleInfo" id="titleInfo-periodical-repeat">
                    <xf:group appearance="full" class="margin-plus">
                        <xf:group ref=".[(@transliteration) or string-length(@lang) &gt; 0]">
                            <br/>
                        </xf:group>
                        <xf:group ref=".[(@transliteration)]">
                            <xf:select1 ref="/mods:mods/mods:extension/ext:transliterationOfResource">
                                <xf:label>Transliteration</xf:label>
                                <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-short-code']/items/item">
                                    <xf:label ref="label"/>
                                    <xf:value ref="value"/>
                                </xf:itemset>
                            </xf:select1>
                        </xf:group>
                        <xf:group ref=".[string-length(@lang) &gt; 0]">
                            <xf:select1 ref="./@lang">
                                <xf:label>Language</xf:label>
                                <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-sorted-short-code']/items/item">
                                    <xf:label ref="label"/>
                                    <xf:value ref="value"/>
                                </xf:itemset>
                            </xf:select1>
                        </xf:group>
                        <xf:input ref="./mods:nonSort" class="text_10">
                            <xf:label>
                                <xf:output value="if (.[string-length(../@type) = 0]) then 'Non Sort' else if (.[../@type='translated' and not(../@lang)]) then 'Transliterated Non Sort' else if (.[../@type='translated' and (../@lang)]) then 'Translated Non Sort' else ''"/>
                            </xf:label>
                        </xf:input>
                        <xf:input ref="./mods:title" class="text_150">
                            <xf:label>
                                <xf:output value="if (.[string-length(../@type) = 0]) then 'Title' else if (.[../@type='translated' and not(../@lang)]) then 'Transliterated Title' else if (.[../@type='translated' and (../@lang)]) then 'Translated Title' else ''"/>
                            </xf:label>
                        </xf:input>
                        <xf:input ref="./mods:subTitle" class="text_150">
                            <xf:label>
                                <xf:output value="if (.[string-length(../@type) = 0]) then 'Subtitle' else if (.[../@type='translated' and not(../@lang)]) then 'Transliterated Subtitle' else if (.[../@type='translated' and (../@lang)]) then 'Translated Subtitle' else ''"/>
                            </xf:label>
                        </xf:input>
                    </xf:group>
                </xf:repeat>
            </fieldset>
            <fieldset class="level-2">
                <xf:group appearance="minimal" class="label-box">
                    <xf:output value="'Editors of Monograph Series'" class="hint-icon">
                        <xf:hint ref="id('hint-code_series-name-compact',instance('code-tables'))/help"/>
                    </xf:output>
                </xf:group>
                <fieldset class="level-3">
                    <xf:group appearance="minimal" class="label-box">
                        <xf:output value="'Persons as Editors'" class="hint-icon">
                            <xf:hint ref="id('hint-code_namePart-compact',instance('code-tables'))/help"/>
                            <xf:hint ref="id('hint-code_more-name-information',instance('code-tables'))/help"/>
                            <xf:hint ref="id('hint-code_more-related-item',instance('code-tables'))/help"/>
                        </xf:output>
                        <xf:trigger ref=".[string-length(./../mods:extension/ext:transliterationOfResource) &gt; 0]">
                            <xf:label>+</xf:label>
                            <xf:action ev:event="DOMActivate">
                                <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-name-person-repeat')" position="before" origin="instance('compact-template')/mods:name[4]"/>
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger ref=".[string-length(./../mods:extension/ext:transliterationOfResource) = 0]">
                            <xf:label>+</xf:label>
                            <xf:action ev:event="DOMActivate">
                                <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-series-name-person-repeat')" position="before" origin="instance('compact-template')/mods:name[3]"/>
                            </xf:action>
                        </xf:trigger>
                    </xf:group>
                    <xf:repeat nodeset="./mods:name" id="relatedItem-series-name-person-repeat">
                        <xf:group ref=".[@type = 'personal']" appearance="full">
                            <xf:repeat nodeset="./mods:namePart" id="relatedItem-series-name-person-namePart-repeat">
                                <xf:group class="margin-plus">
                                    <xf:select1 ref="./@type">
                                        <xf:label>
                                            <xf:output value="if (../.[@script='Latn']) then 'Transliterated' else ''"/>
                                        </xf:label>
                                        <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='name-part-type-compact-code']/items/item">
                                            <xf:label ref="label"/>
                                            <xf:value ref="value"/>
                                        </xf:itemset>
                                    </xf:select1>
                                    <xf:input ref="." class="text_100">
                                        <xf:label/>
                                    </xf:input>
                                </xf:group>
                            </xf:repeat>
                            <xf:group ref=".[count(../mods:name[@type = 'personal']) &gt; 1]">
                                <br/>
                            </xf:group>
                        </xf:group>
                    </xf:repeat>
                </fieldset>
                <fieldset class="level-3">
                    <xf:group appearance="minimal" class="label-box">
                        <xf:output value="'Institutions as Editors'" class="hint-icon">
                            <xf:hint ref="id('hint-code_namePart-institution-compact',instance('code-tables'))/help"/>
                            <xf:hint ref="id('hint-code_more-name-information',instance('code-tables'))/help"/>
                        </xf:output>
                        <xf:trigger ref=".[string-length(./../mods:extension/ext:transliterationOfResource) &gt; 0]">
                            <xf:label>+</xf:label>
                            <xf:action ev:event="DOMActivate">
                                <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-series-name-institution-namePart-repeat')" position="before" origin="instance('compact-template')/mods:name[6]"/>
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger ref=".[string-length(./../mods:extension/ext:transliterationOfResource) = 0]">
                            <xf:label>+</xf:label>
                            <xf:action ev:event="DOMActivate">
                                <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-series-name-institution-namePart-repeat')" position="before" origin="instance('compact-template')/mods:name[5]"/>
                            </xf:action>
                        </xf:trigger>
                    </xf:group>
                    <xf:repeat nodeset="./mods:name" id="relatedItem-series-name-institution-repeat">
                        <xf:group ref=".[@type = 'corporate']" appearance="full">
                            <xf:repeat nodeset="./mods:namePart" id="relatedItem-series-name-institution-namePart-repeat">
                                <xf:group class="margin-plus">
                                    <xf:input ref="." class="text_100">
                                        <xf:label>
                                            <xf:output value="if (.[@script='Latn']) then 'Transliterated' else ''"/>
                                        </xf:label>
                                    </xf:input>
                                </xf:group>
                            </xf:repeat>
                            <xf:group ref=".[count(../mods:name[@type = 'corporate']) &gt; 1]">
                                <br/>
                            </xf:group>
                        </xf:group>
                    </xf:repeat>
                </fieldset>
            </fieldset>
            <fieldset class="level-2">
                <xf:group appearance="minimal" class="label-box">
                    <xf:output value="'Location of Monograph in Series'" class="hint-icon">
                        <xf:hint ref="id('hint-code_series-part-compact',instance('code-tables'))/help"/>
                    </xf:output>
                </xf:group>
                <xf:repeat nodeset="./mods:part" id="related-item-part-series-repeat">
                    <xf:group ref=".[mods:detail]">
                        <fieldset class="level-3">
                            <xf:group appearance="minimal" class="label-box">
                                <xf:label>Volume</xf:label>
                            </xf:group>
                            <xf:repeat nodeset="./mods:detail" id="related-item-part-detail-series-repeat">
                                <xf:group ref=".[mods:number]" class="margin-plus" appearance="full">
                                    <xf:input ref="./mods:number" class="text_10">
                                        <xf:label/>
                                    </xf:input>
                                </xf:group>
                            </xf:repeat>
                        </fieldset>
                    </xf:group>
                    <xf:group ref=".[mods:part/mods:text]">
                        <xf:textarea ref="instance('save-data')/mods:part/mods:text">
                            <xf:label>Text</xf:label>
                        </xf:textarea>
                    </xf:group>
                </xf:repeat>
            </fieldset>
            <xf:group ref=".[mods:identifier]">
                <fieldset class="level-2">
                    <xf:group appearance="minimal" class="label-box">
                        <xf:output value="'Identifiers of Monograph Series'" class="hint-icon">
                            <xf:hint ref="id('hint-code_identifier',instance('code-tables'))/help"/>
                            <xf:hint ref="id('hint-code_more-related-item',instance('code-tables'))/help"/>
                        </xf:output>
                        <xf:trigger ref=".[mods:identifier]">
                            <xf:label>+</xf:label>
                            <xf:action ev:event="DOMActivate">
                                <xf:insert nodeset="instance('save-data')/mods:identifier" at="index('identifier-edited-volume-repeat')" position="before" origin="instance('compact-template')/mods:identifier"/>
                            </xf:action>
                        </xf:trigger>
                    </xf:group>
                    <xf:repeat nodeset="./mods:identifier" id="identifier-edited-volume-repeat">
                        <xf:group class="margin-plus" appearance="full">
                            <xf:select1 ref="./@type">
                                <xf:label>Type</xf:label>
                                <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='identifier-type-code']/items/item">
                                    <xf:label ref="label"/>
                                    <xf:value ref="value"/>
                                </xf:itemset>
                            </xf:select1>
                            <xf:input ref="." class="text_50">
                                <xf:label/>
                            </xf:input>
                        </xf:group>
                    </xf:repeat>
                </fieldset>
            </xf:group>
        </xf:repeat>
    </fieldset>
</div>