<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:ext="http://exist-db.org/mods/extension" class="compact block-form" tab-id="compact-b-article">
    <xf:group>
        <fieldset class="level-1">
            <div class="label-box">
                <xf:output value="'Periodical'">
                    <xf:hint ref="id('hint-code_relatedItem-periodical-compact', instance('code-tables'))/help"/>
                    <xf:hint ref="id('hint-code_more-related-item', instance('code-tables'))/help"/>
                </xf:output>
            </div>
            <xf:repeat nodeset="instance('save-data')/mods:relatedItem" id="relatedItem-periodical-repeat">
                <xf:group>
                    <fieldset class="level-2">
                        <div class="label-box">
			                <xf:output value="'Periodical Title'">
			                    <xf:hint ref="id('hint-code_relatedItem-periodical-titleInfo-compact', instance('code-tables'))/help"/>
			                    <xf:hint ref="id('hint-code_more-related-item', instance('code-tables'))/help"/>
			                </xf:output>
                        </div>
                        <xf:repeat nodeset="./mods:titleInfo" id="relatedItem-titleInfo-periodical-repeat">
                            <xf:group ref=".[(@transliteration) or string-length(@lang) &gt; 0]">
                                <br/>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="./mods:nonSort" class="text_10 margin-plus">
                                    <xf:label>
                                        <xf:output value="if (.[string-length(../@type) = 0]) then 'Non Sort' else if (.[../@type='translated' and not(../@lang)]) then 'Transliterated Non Sort' else if (.[../@type='translated' and (../@lang)]) then 'Translated Non Sort' else ''">
                                            <xf:hint ref="id('hint-code_nonSort', instance('code-tables'))/help"/>
                                        </xf:output> 
                                    </xf:label>
                                </xf:input>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="./mods:title" class="text_150 margin-plus">
                                    <xf:label>
                                        <xf:output value="if (.[string-length(../@type) = 0]) then 'Title' else if (.[../@type='translated' and not(../@lang)]) then 'Transliterated Title' else if (.[../@type='translated' and (../@lang)]) then 'Translated Title' else ''">
                                            <xf:hint ref="id('hint-code_title-compact', instance('code-tables'))/help"/>
                                        </xf:output>                                    
                                    </xf:label>
                                </xf:input>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="./mods:subTitle" class="text_150 margin-plus">
			                        <xf:label>
			                            <xf:output value="if (.[string-length(../@type) = 0]) then 'Subtitle' else if (.[../@type='translated' and not(../@lang)]) then 'Transliterated Subtitle' else if (.[../@type='translated' and (../@lang)]) then 'Translated Subtitle' else ''">
			                                <xf:hint ref="id('hint-code_subTitle-compact', instance('code-tables'))/help"/>
			                            </xf:output>                            
			                        </xf:label>
                                </xf:input>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
                <xf:group>
                    <fieldset class="level-2">
                        <div class="label-box extra-wide">
			                <xf:output value="'Institutional Editor(s) of Periodical'">
			                    <xf:hint ref="id('hint-code_name-relatedItem-periodical-editor-compact', instance('code-tables'))/help"/>
			                    <xf:hint ref="id('hint-code_more-related-item', instance('code-tables'))/help"/>
			                </xf:output>
                            <span class="add-delete-button">
                                <xf:trigger ref=".[string-length(./../mods:extension/ext:transliterationOfResource) &gt; 0]">
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-name-repeat-periodical')" position="before" origin="instance('compact-template')/mods:name[6]"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[string-length(./../mods:extension/ext:transliterationOfResource) = 0]">
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-name-repeat-periodical')" position="before" origin="instance('compact-template')/mods:name[5]"/>
                                    </xf:action>
                                </xf:trigger>
                            </span>
                        </div>
                        <xf:repeat nodeset="./mods:name" id="relatedItem-name-repeat-periodical">
                            <xf:group ref="preceding-sibling::*[1][self::mods:name]" class="up-down-pointer">
                                <xf:trigger>
                                    <xf:label>∧</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="self::*" origin="following-sibling::*[1]" position="before"/>
                                        <xf:delete nodeset="following-sibling::*[1]"/>
                                    </xf:action>
                                </xf:trigger>
                            </xf:group>
                            <xf:group ref="following-sibling::*[1][self::mods:name]" class="up-down-pointer">
                                <xf:trigger>
                                    <xf:label>∨</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="self::*" origin="preceding-sibling::*[1]" position="after"/>
                                        <xf:delete nodeset="preceding-sibling::*[1]"/>
                                    </xf:action>
                                </xf:trigger>
                            </xf:group>
                            <xf:group>
                                <fieldset class="level-3">
                                    <div class="label-box">
						                <xf:output value="'Name'">
						                    <xf:hint ref="id('hint-code_relatedItem-namePart-corporate-compact', instance('code-tables'))/help"/>
						                    <xf:hint ref="id('hint-code_more-related-item', instance('code-tables'))/help"/>
						                </xf:output>
                                    </div>
                                    <xf:group> </xf:group>
                                    <xf:repeat nodeset="./mods:namePart" id="relatedItem-namePart-periodical-repeat">
                                        <xf:group>
                                            <xf:input ref="." class="text_100 margin-plus">
                                                <xf:label>
                                                    <xf:group ref=".[@script='Latn']">Transliterated</xf:group>
                                                </xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
                <xf:group>
                    <fieldset class="level-2">
                        <div class="label-box">
			                <xf:output value="'Location of Article in Periodical'">
			                    <xf:hint ref="id('hint-code_part-relatedItem-periodical-compact', instance('code-tables'))/help"/>
			                </xf:output>
                        </div>
                        <xf:repeat nodeset="./mods:part" id="related-item-part-periodical-repeat">
                            <xf:group ref=".[mods:detail]">
                                <fieldset class="level-3">
                                    <div class="label-box">
                                        <span class="legend">Volume and Issue</span>
                                    </div>
                                    <xf:repeat nodeset="./mods:detail" id="related-item-part-detail-periodical-repeat">
                                        <xf:group ref=".[mods:number]" class="margin-plus">
                                            <xf:input ref="./mods:number" class="text_10">
                                                <xf:label>
                                                    <xf:output ref="./../@type"/>
                                                </xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                            <xf:group ref=".[mods:date]">
                                <fieldset class="level-3">
                                    <div class="label-box">
                                        <span class="legend">
                                            <span class="legend">Year of Publication</span>
                                        </span>
                                    </div>
                                    <xf:repeat nodeset="./mods:date" id="related-item-part-date-periodical-repeat">
                                        <div class="block-form">
                                            <xf:group ref="." class="hide-label margin-plus">
                                                <xf:input ref="." class="text_10">
                                                    <xf:label>Year</xf:label>
                                                </xf:input>
                                            </xf:group>
                                        </div>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                            <xf:group ref=".[mods:extent]">
                                <fieldset class="level-3">
                                    <div class="label-box">
                                        <span class="legend">Page Extent</span>
                                    </div>
                                    <xf:repeat nodeset="./mods:extent" id="related-item-extent-periodical-repeat">
                                        <xf:group ref=".[@unit]">
                                            <xf:select1 ref="./@unit" selection="open">
                                                <xf:label>
									                <xf:output value="'Unit'">
									                    <xf:hint ref="id('hint-code_part-extent-unit', instance('code-tables'))/help"/>
									                </xf:output>
                                                </xf:label>
                                                <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='part-extent-unit-code']/items/item">
                                                    <xf:label ref="label"/>
                                                    <xf:value ref="value"/>
                                                </xf:itemset>
                                            </xf:select1>
                                        </xf:group>
                                        <xf:group ref=".[mods:start]" class="margin-plus">
                                            <xf:input ref="./mods:start" class="text_10">
                                                <xf:label>Start</xf:label>
                                            </xf:input>
                                        </xf:group>
                                        <xf:group ref=".[mods:end]" class="margin-plus">
                                            <xf:input ref="./mods:end" class="text_10">
                                                <xf:label>End</xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
                <xf:group ref=".[mods:identifier]">
                    <fieldset class="level-2">
                        <div class="label-box">
			                <xf:output value="'Identifiers'">
			                    <xf:hint ref="id('hint-code_identifier', instance('code-tables'))/help"/>
			                </xf:output>
                            <span class="add-delete-button">
                                <xf:trigger ref=".[mods:identifier]">
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:identifier" at="index('identifier-periodical-repeat')" position="before" origin="instance('compact-template')/mods:identifier"/>
                                    </xf:action>
                                </xf:trigger>
                            </span>
                        </div>
                        <xf:repeat nodeset="./mods:identifier" id="identifier-periodical-repeat">
                            <xf:group class="hide-label margin-plus">
                                <xf:select1 ref="./@type">
                                    <xf:label>Type</xf:label>
                                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='identifier-type-code']/items/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                    </xf:itemset>
                                </xf:select1>
                                <xf:input ref="." class="text_50">
                                    <xf:label/>
                                </xf:input>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
            </xf:repeat>
        </fieldset>
    </xf:group>
</div>