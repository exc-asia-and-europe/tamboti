                        </xf:itemset>
                    </xf:select1>
                </xf:group>
                <xf:group ref=".[@authorityURI]">
                    <xf:input ref="./@authorityURI" class="text_50">
                        <xf:label>
                            <xf:output value="'Authority URI'" class="hint-icon">
