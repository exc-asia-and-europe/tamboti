<?xml version="1.0" encoding="UTF-8"?>
<div xmlns="http://www.w3.org/1999/xhtml" xmlns:ext="http://exist-db.org/mods/extension" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xlink="http://www.w3.org/1999/xlink" id="user-interface-container" class="table-of-contents block-form" tab-id="table-of-contents">
    <div style="display:none">
        <xf:model id="m-ui">
            <xf:instance id="i-code-tables" src="get-code-tables.xq?code-table-ids=altRepGroup%2cno-empty%2clanguage-3-type-sorted%2cscript%2ctransliteration%2clanguage-2-type-short">
                <code-tables xmlns="http://hra.uni-heidelberg.de/ns/mods-editor/"/>
            </xf:instance>
        </xf:model>
    </div>
    <xf:group model="m-main" ref="instance('save-data')">
        <fieldset class="level-1">
            <xf:group appearance="minimal" class="label-box">
                <xf:output value="'Table Of Contents'" class="hint-icon">
                    <xf:hint ref="id('hint-code_table-of-contents',instance('i-hint-codes'))/*:help"/>
                </xf:output><!--
	                  <xf:trigger ref=".[mods:tableOfContents]">
	                      <xf:label>+</xf:label>
	                      <xf:action ev:event="DOMActivate">
	                          <xf:insert nodeset="mods:tableOfContents" at="index('tableOfContents-repeat')" position="before"/>
	                      </xf:action>
	                  </xf:trigger>
	              -->
                <xf:trigger ref=".[mods:tableOfContents]">
                    <xf:label>â€“</xf:label>
                    <xf:delete nodeset="instance('save-data')/mods:tableOfContents" at="index('tableOfContents-repeat')" ev:event="DOMActivate"/>
                </xf:trigger>
            </xf:group><!--Attributes: xlink; lang; xml:lang; script; transliteration; displayLabel; type; shareable; altRepGroup--><!--Subelements: none--><!--Repeating this element is not recommended.-->
            <xf:repeat nodeset="instance('save-data')/mods:tableOfContents" id="tableOfContents-repeat">
                <xf:group appearance="full">
                    <xf:group class="show-hide" ref=".[count(@*) &lt; 9]">
                        <xf:switch>
                            <xf:case id="table-of-contents-add-node-hide">
                                <div class="open-close-button">
                                    <xf:trigger class="add-button">
                                        <xf:label class="xforms-group-label-centered">&gt;</xf:label>
                                        <xf:toggle case="table-of-contents-add-node-unhide" ev:event="DOMActivate"/>
                                    </xf:trigger>
                                </div>
                            </xf:case>
                            <xf:case id="table-of-contents-add-node-unhide">
                                <div class="open-close-button">
                                    <xf:trigger>
                                        <xf:label class="xforms-group-label-centered">&lt;</xf:label>
                                        <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                    </xf:trigger>
                                </div>
                                <div class="node-adds">
                                    <xf:trigger ref=".[not(@altRepGroup)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Alternate Representation Group</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@altRepGroup"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@displayLabel)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Display Label</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@displayLabel"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@lang)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Language</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@lang"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@script)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Script</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@script"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@shareable)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Shareable</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@shareable"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@transliteration)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Transliteration</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@transliteration"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@type)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add Type</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@type"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@xlink:href)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add XLink</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@xlink:href"/>
                                        </xf:action>
                                    </xf:trigger>
                                    <xf:trigger ref=".[not(@xml:lang)]" class="add-button">
                                        <xf:label class="xforms-group-label-centered">Add xml:lang</xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:toggle case="table-of-contents-add-node-hide" ev:event="DOMActivate"/>
                                            <xf:insert context="." origin="instance('insert-templates')/mods:tableOfContents/@xml:lang"/>
                                        </xf:action>
                                    </xf:trigger>
                                </div>
                            </xf:case>
                        </xf:switch>
                    </xf:group>
                    <xf:group ref=".[@altRepGroup]">
                        <xf:select1 ref="./@altRepGroup">
                            <xf:label>
                                <xf:output value="'Alt. Representation Group'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_altRepGroup',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                            <xf:itemset nodeset="id('altRepGroup', instance('code-tables'))/*:items/*:item" model="m-ui">
                                <xf:label ref="*:label"/>
                                <xf:value ref="*:value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                    <xf:group ref=".[@displayLabel]">
                        <xf:input ref="./@displayLabel" class="text_100">
                            <xf:label>
                                <xf:output value="'Display Label'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_displayLabel',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                        </xf:input>
                    </xf:group>
                    <xf:group ref=".[@shareable]">
                        <xf:select1 ref="./@shareable">
                            <xf:label>
                                <xf:output value="'Shareable'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_shareable',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                            <xf:itemset nodeset="id('no-empty', instance('code-tables'))/*:items/*:item" model="m-ui">
                                <xf:label ref="*:label"/>
                                <xf:value ref="*:value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                    <xf:group ref=".[@type]">
                        <xf:input ref="./@type" class="text_50">
                            <xf:label>
                                <xf:output value="'Type'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_toc-type',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                        </xf:input>
                    </xf:group>
                    <xf:group ref=".[@xlink:href]">
                        <xf:input ref="./@xlink:href" class="text_50">
                            <xf:label>
                                <xf:output value="'XLink'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_xlink_href',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                        </xf:input>
                    </xf:group>
                    <xf:group ref=".[@lang]">
                        <xf:select1 ref="./@lang">
                            <xf:label>
                                <xf:output value="'Language'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_language',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                            <xf:itemset nodeset="id('language-3-type-sorted', instance('code-tables'))/*:items/*:item" model="m-ui">
                                <xf:label ref="*:label"/>
                                <xf:value ref="*:value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                    <xf:group ref=".[@script]">
                        <xf:select1 ref="./@script">
                            <xf:label>
                                <xf:output value="'Script'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_script',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                            <xf:itemset nodeset="id('script', instance('code-tables'))/*:items/*:item" model="m-ui">
                                <xf:label ref="*:label"/>
                                <xf:value ref="*:value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                    <xf:group ref=".[@transliteration]">
                        <xf:select1 ref="./@transliteration" selection="open">
                            <xf:label>
                                <xf:output value="'Transliteration'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_transliteration',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                            <xf:itemset nodeset="id('transliteration', instance('code-tables'))/*:items/*:item" model="m-ui">
                                <xf:label ref="*:label"/>
                                <xf:value ref="*:value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                    <xf:group ref=".[@xml:lang]">
                        <xf:select1 ref="./@xml:lang">
                            <xf:label>
                                <xf:output value="'xml:lang'" class="hint-icon">
                                    <xf:hint ref="id('hint-code_xml_lang',instance('i-hint-codes'))/*:help"/>
                                </xf:output>
                            </xf:label>
                            <xf:itemset nodeset="id('language-2-type-short', instance('code-tables'))/*:items/*:item" model="m-ui">
                                <xf:label ref="*:label"/>
                                <xf:value ref="*:value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                    <xf:textarea ref=".">
                        <xf:label>
                            <xf:output value="'Table Of Contents'" class="hint-icon">
                                <xf:hint ref="id('hint-code_table-of-contents',instance('i-hint-codes'))/*:help"/>
                            </xf:output>
                        </xf:label>
                    </xf:textarea>
                </xf:group>
            </xf:repeat>
            <xf:group appearance="full" ref=".[not(mods:tableOfContents)]">
                <xf:trigger class="add-button">
                    <xf:label class="xforms-group-label-centered">Add Missing Table Of Contents</xf:label>
                    <xf:insert nodeset="instance('save-data')/mods:tableOfContents" origin="instance('new-instance')/mods:tableOfContents" ev:event="DOMActivate"/>
                </xf:trigger>
            </xf:group>
        </fieldset>
    </xf:group>
</div>